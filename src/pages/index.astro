---
import Layout from '../layouts/Layout.astro';
import AbvCalculator from '../components/AbvCalculator.astro';
import StrikeWaterTempCalculator from '../components/StrikeWaterTempCalculator.astro';
---

<Layout>
    <h1>BREW TOOL</h1>
    <AbvCalculator/>
    <StrikeWaterTempCalculator/>
</Layout>

<style>
    h1 {
        font-size: 3rem;
        font-family: Arial, Helvetica, sans-serif;
        margin-left: auto;
        margin-right: auto;
        padding-bottom: 0;
        color: transparent;
        width: fit-content;
        background-image: linear-gradient(to right, #eaee09, #e2610b);
        -webkit-background-clip: text;
        background-clip: text;
    }
</style>
